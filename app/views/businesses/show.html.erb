<div>
  <img src="https://bcuassets.blob.core.windows.net/img/enterprise-systems-management-banner-image-131934043916393502.jpg" class="fix-obj">
</div>

<div class="container mt-3">
  <h2 class="section-title text-center mt-5">Choose a branch </h2>
  <div class="section-tag text-center mb-3">for your appointment</div>
  <div class="row justify-content-center">
    <% @branchoffices.each do |branch|%>
      <div class="m-4 p-4 bg-body round-1 shadow col-3">
        <div class="d-flex justify-content-between border-bottom pb-3">
        <strong class="d-block text-gray-dark"><%= branch.city%></strong>
          <small class="d-block fst-italic">#<%= branch.code_branchoffice%></small>
        </div>
        <div class="d-flex justify-content-between  text-muted pt-3">
          <p class="pb-3 mb-0 small lh-sm">
            <%= branch.address%>
          </p>
          <div class="form-inline input-field text-end">
            <%= link_to(business_branchoffice_path(@business, branch), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger text-white p-2") do %>
              <i class="far fa-times-circle text-white"></i>
            <% end %>
          </div>
          <div class="form-inline input-field text-end">
            <%= link_to(business_branchoffice_path(@business, branch) , class:"btn btn-white waves-effect waves-light p-2"  ) do %>
              <i class="far fa-calendar-plus"></i>
            <% end %>
          </div>
        </div>
      </div>
    <%end%>
    <% if current_user.role == 1%>
    <div class="mt-3">
      <div class="form-inline input-field">
        <%= link_to( new_business_branchoffice_path(@business), class:"btn btn-white waves-effect"  ) do %>
          <i class="fas fa-plus-circle"></i> ADD
        <% end %>
      </div>
      <div class="form-inline input-field">
        <%= link_to( businesses_path, class:"btn btn-add text-white"  ) do %>
          <i class="fas fa-arrow-circle-left"></i> Back
        <% end %>
      </div>
    </div>
    <% else %>
      <div class="mt-3">
        <div class="form-inline input-field">
          <%= link_to( :back, class:"btn btn-add text-white") do %>
            <i class="fas fa-arrow-circle-left"></i> Back
          <% end %>
        </div>
      </div>
    <% end %>
    
  </div>
</div>

