<div class="col-lg-8 mx-auto form-wrap" style="margin-top: 180px;">
  <div class="col-lg-12">
      <div class="section-wrap pt-3 pb-4 mb-4 mx-auto text-center">
          <div class="section-title mb-4">New Business</div>
          <div class="section-tag">Form to business.</div>
      </div>
  </div>
  <%= form_with(model: business) do |f| %>
    <% if business.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(business.errors.count, "error") %> prohibited this business from being saved:</h2>

        <ul>
          <% business.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-lg-12 col-md-12">
          <%= f.label :name ,class:"form-name" %>
        <div class="input-field">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="col-lg-6 col-md-6">
          <%= f.label :email ,class:"form-name" %>
        <div class="input-field">
          <%= f.email_field :email %>
        </div>
      </div>
       <div class="col-lg-6 col-md-6">
        <%= f.label :rut ,class:"form-name" %>
      <div class="input-field">
        <%=f.text_field :rut %>
      </div>
    </div>

      <div class="col-lg-12 col-md-12 d-flex justify-content-center">
        <div class="form-inline input-field">
          <%= f.submit "Create", class:"btn btn-white waves-effect waves-light" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


