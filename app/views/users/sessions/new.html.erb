<div class="col-lg-4 mx-auto form-wrap" style="margin-top: 180px;">
  <div class="col-lg-12">
      <div class="section-wrap pt-3 pb-4 mb-4 mx-auto text-center">
          <div class="section-title mb-4">LOGIN</div>
          <div class="section-tag">Form to login.</div>
      </div>
  </div>
  
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="d-flex justify-content-center">
    <div class="col-lg-9 col-md-9">
        <%= f.label :email ,class:"form-name" %>
      <div class="input-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <div class="col-lg-9 col-md-9">
      <%= f.label :password ,class:"form-name" %>
      <div class="input-field">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>
  </div>
<div class="d-flex justify-content-center">
    <div class="col-lg-9 col-md-9">
      <div class="form-inline input-field">
        <%= f.submit "Log in", class:"btn btn-white waves-effect waves-light" %>
      </div>
    </div>
</div>
<% end %>
<div class="d-flex justify-content-center">
    <div class="col-lg-9 col-md-9">
      <div class="form-inline input-field">
       <%= link_to "Sign up", new_user_registration_path , class:"btn btn-dark text-white waves-effect "%>
      </div>
    </div>
</div>

<div class="d-flex justify-content-center">
    <div class="col-lg-9 col-md-9">
      <div class="form-inline input-field">
        <%= link_to "Sign In with Facebook", user_facebook_omniauth_authorize_path, method: :post, class:"btn btn-primary text-white waves-effect waves-light"%>
      </div>
    </div>
</div>


</div>


 