<p id="notice"><%= notice %></p>

<h1>Appointment Apps</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Branchoffice</th>
      <th>Date</th>
      <th>Time</th>
      <th>Duration</th>
      <th>Code</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointment_apps.each do |appointment_app| %>
      <tr>
        <td><%= appointment_app.user_id %></td>
        <td><%= appointment_app.branchoffice_id %></td>
        <td><%= appointment_app.date %></td>
        <td><%= appointment_app.time.strftime("at %I:%M%p")   %></td>
        <td><%= appointment_app.duration.strftime("at %I:%M%p")   %></td>
        <td><%= appointment_app.code %></td>
        <td><%= appointment_app.state %></td>
        <td><%= link_to 'Show', appointment_app %></td>
        <td><%= link_to 'Edit', edit_appointment_app_path(appointment_app) %></td>
        <td><%= link_to 'Destroy', appointment_app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

