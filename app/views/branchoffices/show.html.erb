
<div class="container my-5 pb-4">
  <h2 class="section-title text-center mt-5">Choose a day </h2>
  <div class="section-tag text-center mb-3">for your appointment</div>
  <p id="branch_id" class="visually-hidden"><%= @branchoffice.id %></p>
  
  <div class="row justify-content-center">
    <% if current_user.role == 1%>
      <div class="mt-3 d-flex  justify-content-center">
        <div class="form-inline input-field">
          <%= link_to(  business_path(@business), class:"btn btn-add text-white") do %>
            <i class="fas fa-arrow-circle-left"></i> Back
          <% end %>
        </div>
        <div class="form-inline input-field">
        <%= link_to(edit_business_branchoffice_path(@branchoffice), class:"btn btn-dark text-white" ) do %>
            <i class="far fa-edit"></i>
          <% end %>
        </div>
      </div>
      <% else %>
        <div class="mt-3">
          <div class="form-inline input-field">
            <%= link_to( :back, class:"btn btn-add text-white") do %>
              <i class="fas fa-arrow-circle-left"></i> Back
            <% end %>
          </div>
        </div>
    <% end %>

    <div id="add-event">
      <%= render 'modal'%>
    </div>
    <div id='calendar'></div>
  </div>
</div>


<%=javascript_pack_tag("branchoffices")%>